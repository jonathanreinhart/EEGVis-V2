<UserControl x:Class="EEGVis_V2.Views.AcquisitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EEGVis_V2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Height = "Auto" Source = "../rsc/Acquisition/lamp.png"  
               Margin = "30 50 30 30"/>
        <TextBlock Grid.Row = "1" Grid.Column="0" Text="Lamp" TextAlignment="Center" 
                   VerticalAlignment="Center" FontSize="70" FontFamily="Franklin Gothic Medium"/>
    </Grid>
</UserControl>
